<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_splash_screen_scene"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:src="@mipmap/lpg_icon" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1.6"
        app:lottie_url="https://lottie.host/de093797-a00f-403d-a6b6-30423773fccb/NNCsy2pIXS.json" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leak Master"
        android:textSize="32sp"
        android:textColor="#0E86D4"
        android:textStyle="bold"/>

</LinearLayout>