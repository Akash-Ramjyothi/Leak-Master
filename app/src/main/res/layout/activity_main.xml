<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gasStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas is Turned OFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginBottom="70sp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://lottie.host/a144eb42-7410-41ec-a912-18e7fddd2088/84OwkSBfoV.json"/>

    <TextView
        android:id="@+id/mq2value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas Sensor value: 0 ppm"
        android:textSize="26dp"
        android:layout_marginTop="70sp"/>

</LinearLayout>